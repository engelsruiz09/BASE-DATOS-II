@model IEnumerable<ProyectoBDD.Models.Avion>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<div class="text-center">
    <p style="font-size:larger; color:red">@ViewData["Error"]</p>
</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    @Html.ActionLink("Ver Asientos", "Index", "Asientos")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Compañia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Carga)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Alcance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoAvion.Tipo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Compañia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Carga)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alcance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoAvion.Tipo)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.idAvion }) |
                @Html.ActionLink("Details", "Details", new { id = item.idAvion }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.idAvion })
            </td>
        </tr>
    }

</table>
