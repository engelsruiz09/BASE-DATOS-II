@model IEnumerable<ProyectoBDD.Models.Asiento>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<div class="text-center">
    <p style="font-size:larger; color:red">@ViewData["Error"]</p>
</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Avion.Compañia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoAsiento.Tipo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cantidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Avion.Compañia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoAsiento.Tipo)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.idAsiento }) |
            @Html.ActionLink("Details", "Details", new { id=item.idAsiento }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.idAsiento })
        </td>
    </tr>
}

</table>
