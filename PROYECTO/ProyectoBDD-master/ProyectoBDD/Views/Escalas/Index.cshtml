@model IEnumerable<ProyectoBDD.Models.Escala>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<div class="text-center">
    <p style="font-size:larger; color:red">@ViewData["Error"]</p>
</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<p>
    <form asp-action="Index" method="post" enctype="multipart/form-data">
        <input type="number" name="idVuelo" />
        <input type="submit" value="Buscar" />
    </form>
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Destino)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaHora)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vuelo.idVuelo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Destino)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaHora)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vuelo.idVuelo)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.idEscala }) |
            @Html.ActionLink("Details", "Details", new { id=item.idEscala }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.idEscala })
        </td>
    </tr>
}

</table>
